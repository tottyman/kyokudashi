<h2 class="head-line title_h2 text-center"><b><%= @user.nickname %>さん 編集画面</b></h2>
<div class="container">
  <div class="row">
	<div class="col-8 mx-auto p-3">
	  <%= form_with model: @user, url: user_path, method: :patch do |f| %>
	  <div class="form-group col-12 p-1">
	      <%= f.label :"プロフィール画像", class: "col-5" %>
	  	  <%= f.file_field :image, accept: "image/*", autofocus: true, autocomplete: "image" %>
		</div>

		<div class="form-group col-12 p-1">
	      <%= f.label :"氏名", class: "col-5" %>
	  	  <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
		</div>

		<div class="form-group col-12 p-1">
	  	  <%= f.label :"表示名", class: "col-5" %>
	  	  <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname" %>
		</div>

		<div class="form-group col-12 p-1">
	      <%= f.label :"メールアドレス", class: "col-5" %>
	  	  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
		</div>

		<div class="form-group col-12 p-1">
	  	  <%= f.label :"紹介文", class: "col-5" %>
	  	  <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction" %>
		</div>

		<div class="actions text-center p-3">
	  	  <%= f.submit "編集内容を登録", class: "btn btn-lg bg-dark rounded-pill text-info" %>
		</div>
	  <% end %>
	</div>
  </div>
</div>