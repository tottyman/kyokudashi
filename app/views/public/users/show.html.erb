<h2 class="head-line title_h2 text-center"><b><%= @user.nickname %>さん ユーザー詳細</b></h2>
<div class="container">
  <div class="row">
    <div class="col-7 text-center mx-auto pt-3">
      <table class="table table-hover table-bordered table-condensed">
        <thead>
          <tr class="text-light bg-dark">
            <th>ユーザー情報</th>
            <th>内容</th>
          </tr>
        </thead>
        <tbody>
          <tr class="bg-light">
            <td class="col-auto">
              プロフィール画像
            </td>
            <td class="col-auto">
              <% if @user.image.attached? %>
                <%= image_tag @user.image, size: "60x60" %>
              <% else %>
                <%= image_tag 'no_image', size: "60x60" %>
              <% end %>
            </td>
          </tr>

          <tr class="bg-light">
            <td class="col-auto">
              氏名
            </td>
            <td class="col-auto">
              <%= @user.name %>
            </td>
          </tr>

          <tr class="bg-light">
            <td class="col-auto">
              表示名
            </td>
            <td class="col-auto">
              <%= @user.nickname %>
            </td>
          </tr>

          <tr class="bg-light">
            <td class="col-auto">
              メールアドレス
            </td>
            <td class="col-auto">
              <% if @user.id == current_user.id %>
                <%= @user.email %>
              <% else %>
                非公開
              <% end %>
            </td>
          </tr>

          <tr class="bg-light">
            <td class="col-auto">
              紹介文
            </td>
            <td class="col-auto">
              <%= @user.introduction %>
            </td>
          </tr>

        </tbody>
      </table>
      <% if @user.id == current_user.id %>
        <div class="text-center pt-3">
          <%= link_to edit_user_path(@user), class: "btn btn-lg bg-dark rounded-pill text-success mr-3" do %>
            <b>編集</b>
          <% end %>
          <%= link_to user_path(@user), method: :delete, class: "btn btn-lg bg-dark rounded-pill text-danger ml-3", "data-confirm" => "本当に消しますか？" do %>
            <b>消去</b>
          <% end %>
        </div>
      <% else %>
      <% end %>
  	</div>

  	<div class="col-5 text-center mx-auto pt-3">
      <table class="table table-hover table-bordered table-condensed">
        <thead>
          <tr class="text-light bg-dark">
            <th>出場バンド</th>
            <th>メンバー数</th>
          </tr>
        </thead>
        <tbody>
          <% @members.each do |member| %>
            <tr class="bg-light">
              <td class="col-auto">
                <%= link_to band_path(member.band.id) do %>
                  <%= member.band.band_name %>
                <% end %>
              </td>
              <td class="col-auto">
                <i class="fa-solid fa-users"></i>　<%= member.band.members.count %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>