<%= render 'layouts/error_messages', model: resource %>

<h2 class="head-line title_h2 text-center"><b>会員登録</b></h2>
<div class="container">
  <div class="row">
	  <div class="col-6 mx-auto pt-3">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="form-group col-12 p-1">
          <%= f.label :"氏名", class: "col-6" %>
          <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
        </div>
        
        <div class="form-group col-12 p-1">
          <%= f.label :"表示名", class: "col-6" %>
          <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname" %>
        </div>
      
        <div class="form-group col-12 p-1">
          <%= f.label :"メールアドレス", class: "col-6" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      
        <div class="form-group col-12 p-1">
          <%= f.label :"パスワード(6文字以上)", class: "col-6" %>
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>
      
        <div class="form-group col-12 p-1">
          <%= f.label :"パスワード（確認用）", class: "col-6" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      
        <div class="actions text-center p-3">
          <%= f.submit "新規登録", class: "btn btn-lg bg-dark rounded-pill text-info" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

