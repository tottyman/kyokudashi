<h2 class="head-line title_h2 text-center"><b>管理者ログイン</b></h2>
<div class="container">
  <div class="row">
	  <div class="col-6 mx-auto pt-3">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group col-12 p-1">
          <%= f.label :"メールアドレス", class: "col-6" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      
        <div class="form-group col-12 p-1">
          <%= f.label :"パスワード", class: "col-6" %>
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>
      
        <div class="actions text-center p-3">
          <%= f.submit "サインイン", class: "btn btn-lg bg-dark rounded-pill text-info" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
